{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Base configuration rules",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":disableRateLimiting",
        ":maintainLockFilesWeekly",
        ":semanticCommitsDisabled",
        "schedule:weekdays"
    ],
    "separateMultipleMajor": false,
    "separateMinorPatch": false,
    "rebaseWhen": "never",
    "postUpdateOptions": [
        "yarnDedupeHighest"
    ],
    "packageRules": [
        {
            "description": "Require dashboard approval for major updates",
            "matchUpdateTypes": [
                "major"
            ],
            "dependencyDashboardApproval": true
        },
        {
            "matchPackagePrefixes": [
                "@types"
            ],
            "groupName": "Types packages"
        },
        {
            "matchPackagePatterns": [
                "@tryghost"
            ],
            "excludePackageNames": [
                "@tryghost/koenig-lexical"
            ],
            "excludePackagePrefixes": [
                "@tryghost/kg-"
            ],
            "groupName": "TryGhost packages"
        },
        {
            "matchPackageNames": [
                "@tryghost/koenig-lexical"
            ],
            "matchPackagePrefixes": [
                "@tryghost/kg-"
            ],
            "groupName": "Koenig packages"
        },
        {
            "description": "Group CSS preprocessors",
            "matchPackagePatterns": [
                "^postcss",
                "^css"
            ],
            "matchPackageNames": [
                "autoprefixer",
                "ember-cli-postcss"
            ],
            "groupName": "CSS preprocessors"
        },
        {
            "description": "Group JS testing and linting tools",
            "extends": [
                "packages:linters",
                "packages:jsTest"
            ],
            "matchPackageNames": [
                "c8",
                "eslint-plugin-ghost",
                "grunt",
                "nock",
                "nodemon",
                "rewire",
                "supertest",
                "tmp"
            ],
            "groupName": "Test & linting packages"
        },
        {
            "matchPackagePatterns": [
                "vite"
            ],
            "groupName": "Vite packages"
        },
        {
            "matchPackagePatterns": [
                "metascraper"
            ],
            "groupName": "metascraper"
        }
    ]
}